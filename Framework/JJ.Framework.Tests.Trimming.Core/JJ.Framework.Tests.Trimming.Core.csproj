<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <!--<TargetFrameworks>net9.0;net8.0;net7.0;net6.0;net5.0;net461;netstandard2.1;netstandard2.0</TargetFrameworks>-->
    <!--<TargetFrameworks>net9.0;net8.0;net7.0;net6.0;net5.0;net461</TargetFrameworks>-->
    <!--<TargetFrameworks>net9.0</TargetFrameworks>-->
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <DebugType>none</DebugType>
  </PropertyGroup>

  <!--<PropertyGroup Condition="$(TargetFramework)!='net461'">-->
  <PropertyGroup Condition="$(TargetFramework)!='net461'">
    <PublishTrimmed>true</PublishTrimmed>
    <PublishAot>true</PublishAot>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <RuntimeIdentifiers>win-x64</RuntimeIdentifiers>
    <!--<IsAotCompatible>true</IsAotCompatible>-->
    <!--<StripSymbols>true</StripSymbols>-->
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\JJ.Framework.Testing.Core\JJ.Framework.Testing.Core.csproj" />
    <ProjectReference Include="..\JJ.Framework.Testing\JJ.Framework.Testing.Legacy.csproj" />
  </ItemGroup>

  <Target Name="PublisAfterBuild" AfterTargets="Build">
    <MSBuild Projects="$(MSBuildProjectFile)" 
             Targets="Publish" 
             Properties="PublishProfile=Properties\PublishProfiles\FolderProfile.pubxml;NoBuild=true" />
             <!--Properties="PublishProfile=Properties\PublishProfiles\FolderProfile.pubxml" />-->
  </Target>

  <Target Name="RemoveSymbolsAndDocs" AfterTargets="Publish" Condition="'$(PublishDir)'!=''">
    <Message Importance="High" Text="Removing symbols and docs from publish directory..." />
    <Message Importance="High" Text="PublishDir = $(PublishDir)" />

    <ItemGroup><PdbsToDeletejj Include="$(PublishDir)*.pdb" /></ItemGroup>
    <Message Importance="High" Text="Removing $(PublishDir)*.pdb" />
    <Message Importance="High" Text="Removing @(PdbsToDeletejj)" />
    <Delete Files="@(PdbsToDeletejj)" />

    <ItemGroup><XmlsToDeletejj Include="$(PublishDir)*.xml" /></ItemGroup>
    <Message Importance="High" Text="Removing $(PublishDir)*.xml" />
    <Message Importance="High" Text="Removing @(XmlsToDeletejj)" />
    <Delete Files="@(XmlsToDeletejj)" />
  </Target>

</Project>
