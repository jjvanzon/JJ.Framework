<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="build\JJ.AutoIncrementVersion.targets" />
  
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Version Condition="'$(BuildNum)'==''">1.8.0</Version>
    <Version Condition="'$(BuildNum)'!=''">1.8.$(BuildNum)</Version>
    <AssemblyName>JJ.AutoIncrementVersion</AssemblyName>
    <Description>Our * doesn't work anymore. Use %24(BuildNum) instead.</Description>
    <PackageTags>
      MSBuild; autoincrement; version; build-number; assemblyinfo; SemVer; 
      packaging; ci; pipeline; devops; build; auto-increment; semantic; versioning; assemblyversion; auto; increment; buildnumber
    </PackageTags>
    <Authors>JJ van Zon</Authors>
    <Copyright>Copyright © Jan Joost van Zon 2025</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>    
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageIcon>jj-icon-64x64-margin4.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RepositoryUrl>
      https://github.com/jjvanzon/JJ.Framework/tree/core/Framework/JJ.Framework.Versioning.Core
    </RepositoryUrl>
    <PackageProjectUrl>
      https://github.com/jjvanzon/JJ.Framework/tree/core/Framework/JJ.Framework.Versioning.Core
    </PackageProjectUrl>
  </PropertyGroup>
  <ItemGroup>
    <None Include="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="README.md">
      <Pack>True</Pack>
      <PackagePath>contentFiles\any\any\JJ.AutoIncrementVersion.README.md</PackagePath>
    </None>
    <None Include="..\..\Resources\jj-icon-64x64-margin4.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="build\JJ.AutoIncrementVersion.targets">
      <Pack>True</Pack>
      <PackagePath>\build</PackagePath>
    </None>
    <None Include="JJ.AutoIncrementVersion.default.props">
      <Pack>True</Pack>
      <PackagePath>\build\JJ.AutoIncrementVersion.props</PackagePath>
    </None>
  </ItemGroup>
</Project>
