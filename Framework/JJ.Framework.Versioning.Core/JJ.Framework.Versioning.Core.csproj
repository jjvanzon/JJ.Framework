<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="build\JJ.AutoIncrementVersion.targets" />
  
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Version Condition="'$(BuildNum)'==''">1.8.0</Version>
    <Version Condition="'$(BuildNum)'!=''">1.8.$(BuildNum)</Version>
    <AssemblyName>JJ.AutoIncrementVersion</AssemblyName>
    <Description>We miss our * but now we can use %24(BuildNum)</Description>
    <PackageTags>
      MSBuild; auto-increment; version; build-number; assemblyinfo; SemVer; 
      packaging; pipeline; devops; build; autoincrement; semantic; versioning; assemblyversion; auto; increment; buildnumber; ci
    </PackageTags>
    <Authors>JJ van Zon</Authors>
    <Copyright>Copyright © Jan Joost van Zon 2025</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>    
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageIcon>jj-icon-64x64-margin4.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RepositoryUrl>
      https://github.com/jjvanzon/JJ.Framework/tree/core/Framework/JJ.Framework.Versioning.Core
    </RepositoryUrl>
    <PackageProjectUrl>
      https://github.com/jjvanzon/JJ.Framework/tree/core/Framework/JJ.Framework.Versioning.Core
    </PackageProjectUrl>
  </PropertyGroup>
  
  <ItemGroup>
    <None Remove="build\JJ.AutoIncrementVersion.targets" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="..\..\Resources\jj-icon-64x64-margin4.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="JJ.AutoIncrementVersion.default.xml">
      <Pack>True</Pack>
      <PackagePath>contentFiles\any\any\JJ.AutoIncrementVersion.default.xml</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <Content Include="build\JJ.AutoIncrementVersion.targets">
      <Pack>True</Pack>
      <PackagePath>\build</PackagePath>
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
