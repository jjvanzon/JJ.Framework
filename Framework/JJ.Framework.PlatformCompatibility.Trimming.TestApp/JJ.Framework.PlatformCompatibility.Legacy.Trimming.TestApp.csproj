<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <Nullable>disable</Nullable>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <DebugType>none</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\JJ.Framework.PlatformCompatibility.Tests\Helpers\*.cs" Link="Helpers\%(Filename)%(Extension)" />
    <Compile Include="..\JJ.Framework.PlatformCompatibility.Tests\*.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\JJ.Framework.PlatformCompatibility\JJ.Framework.PlatformCompatibility.Legacy.csproj" />
    <ProjectReference Include="..\JJ.Framework.Reflection\JJ.Framework.Reflection.Legacy.csproj" />
    <ProjectReference Include="..\JJ.Framework.Reflection.Core\JJ.Framework.Reflection.Core.csproj" />
    <ProjectReference Include="..\JJ.Framework.Testing\JJ.Framework.Testing.Legacy.csproj" />
    <ProjectReference Include="..\JJ.Framework.Testing.Core\JJ.Framework.Testing.Core.csproj" />
    <ProjectReference Include="..\JJ.Framework.IO.Core\JJ.Framework.IO.Core.csproj" />
  </ItemGroup>

  <!-- Publish -->

  <PropertyGroup>

    <TargetFrameworks>net9.0;net8.0</TargetFrameworks>
    <!--<TargetFrameworks>net9.0;net8.0;net7.0</TargetFrameworks>-->
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <!--<RuntimeIdentifiers>win-x64;linux-arm64</RuntimeIdentifiers>-->
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)'=='net9.0'">
    <SelfContained>True</SelfContained>
    <PublishTrimmed>True</PublishTrimmed>
    <PublishAot>True</PublishAot>
    <!--<PublishSingleFile>True</PublishSingleFile>-->
    <PublishReadyToRun>True</PublishReadyToRun>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)'=='net8.0'">
    <SelfContained>True</SelfContained>
    <PublishTrimmed>True</PublishTrimmed>
    <PublishAot>True</PublishAot>
    <!--<PublishSingleFile>True</PublishSingleFile>-->
    <PublishReadyToRun>True</PublishReadyToRun>
  </PropertyGroup>

  <!--<PropertyGroup Condition="'$(TargetFramework)'=='net7.0'">
    <SelfContained>True</SelfContained>
    <PublishTrimmed>True</PublishTrimmed>
    <PublishAot>True</PublishAot>
    --><!--<PublishSingleFile>True</PublishSingleFile>--><!--
    <PublishReadyToRun>True</PublishReadyToRun>
  </PropertyGroup>-->
  
  <PropertyGroup>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PublishProtocol>FileSystem</PublishProtocol>
    <_TargetId>Folder</_TargetId>
    <PublishDir>bin\$(Configuration)\$(TargetFramework)\publish\$(RuntimeIdentifier)\</PublishDir>
  </PropertyGroup>

  <Target Name="PublishAfterBuild" AfterTargets="Build" Condition="'$(TargetFramework)'!=''">
    <MSBuild Projects="$(MSBuildProjectFile)" Targets="Publish" Properties="NoBuild=true" />
  </Target>
  
  <!-- Multi-OS Experiment -->

  <!--<Target Name="PublishWinX64" AfterTargets="Build" Condition="'$(TargetFramework)'!=''">
    <MSBuild Projects="$(MSBuildProjectFile)" 
             Targets="Publish" 
             Properties="RuntimeIdentifier=win-x64;PublishDir=bin\$(Configuration)\$(TargetFramework)\publish\win-x64\;NoBuild=true" />
  </Target>-->

  <!-- Error: Cross-OS native compilation is not supported. -->
  <!--
  <Target Name="PublishLinuxArm64" AfterTargets="Build" Condition="'$(TargetFramework)'!=''">
    <MSBuild Projects="$(MSBuildProjectFile)" Targets="Publish" 
             Properties="RuntimeIdentifier=linux-arm64;PublishDir=bin\$(Configuration)\$(TargetFramework)\publish\linux-arm64\;NoBuild=true" />
  </Target>
  -->
  
  <Target Name="RemoveSymbolsAndDocs" AfterTargets="Publish" Condition="'$(PublishDir)'!=''">
    <Message Importance="High" Text="Removing symbols and docs from publish directory..." />
    <Message Importance="High" Text="PublishDir = $(PublishDir)" />

    <ItemGroup><PdbsToDeletejj Include="$(PublishDir)*.pdb" /></ItemGroup>
    <Message Importance="High" Text="Removing $(PublishDir)*.pdb" />
    <Message Importance="High" Text="Removing @(PdbsToDeletejj)" />
    <Delete Files="@(PdbsToDeletejj)" />

    <ItemGroup><XmlsToDeletejj Include="$(PublishDir)*.xml" /></ItemGroup>
    <Message Importance="High" Text="Removing $(PublishDir)*.xml" />
    <Message Importance="High" Text="Removing @(XmlsToDeletejj)" />
    <Delete Files="@(XmlsToDeletejj)" />
  </Target>
  
  <Import Project="..\JJ.Framework.PlatformCompatibility.Core\JJ.Framework.PlatformCompatibility.Core.projitems" Label="Shared" />
  <Import Project="..\JJ.Framework.SharedProject.Core\JJ.Framework.SharedProject.Core.projitems" Label="Shared" />

</Project>
