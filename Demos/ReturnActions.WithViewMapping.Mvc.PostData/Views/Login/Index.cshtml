@* ReSharper disable AccessToStaticMemberViaDerivedType *@

@using JJ.Demos.ReturnActions.WithViewMapping.Mvc.Names
@using JJ.Demos.ReturnActions.WithViewMapping.Mvc.PostData.Names
@model JJ.Demos.ReturnActions.WithViewMapping.ViewModels.LoginViewModel

@{
	ViewBag.Title = "Login";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{

	<h2>Login</h2>

	<p>
		UserName
		@Html.TextBoxFor(x => x.UserName)
	</p>

	<p>
		Password
		@Html.PasswordFor(x => x.Password)
	</p>

	<input type="submit" value="LogIn" />

	<br />

	@Html.ActionLink("Back to List", nameof(ActionNames.Index), nameof(ControllerNames.Demo))

	using (Html.BeginItem(() => Model.ReturnAction))
	{
		@Html.Partial(nameof(ViewNames._ActionInfo), Model.ReturnAction)
	}
}