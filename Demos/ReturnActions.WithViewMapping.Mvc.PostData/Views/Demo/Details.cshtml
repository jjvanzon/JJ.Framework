@* ReSharper disable AccessToStaticMemberViaDerivedType *@

@using JJ.Demos.ReturnActions.WithViewMapping.Mvc.PostData.Names
@model JJ.Demos.ReturnActions.WithViewMapping.ViewModels.DetailsViewModel

@{
	ViewBag.Title = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<fieldset>
	<legend>Details</legend>
	<p>
		<strong>ID: </strong> @Model.Entity.ID
	</p>
	<p>
		<strong>Name: </strong> @Model.Entity.Name
	</p>
</fieldset>
<p>
	@Html.ActionLink("Edit", nameof(ActionNames.EditFromDetails), new { id = Model.Entity.ID }) |
	@Html.ActionLink("Back to List", nameof(ActionNames.Index))
	@Html.ActionLink("Logout", nameof(ActionNames.Logout))
</p>
